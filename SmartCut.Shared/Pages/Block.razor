    private MarkupString exportIcon = new MarkupString(@"
        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='white' class='bi bi-file-earmark-arrow-up-fill' viewBox='0 0 16 16'>
            <path d='M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M6.354 9.854a.5.5 0 0 1-.708-.708l2-2a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 8.707V12.5a.5.5 0 0 1-1 0V8.707z'/>
        </svg>");
    protected override void OnInitialized()
    {
        BreadcrumbService.SetBreadcrumbs(new List<BreadcrumbItem>
        {
             new() { Title = Localizer.Get("Home"), Url = "/", IsActive = false },
            new() { Title = Localizer.Get("Block"), Url = "/block", IsActive = true }

        });
    }


    private void NavigateToCreate()
    {
        NavigationManager.NavigateTo("create-block");
    }
    private void NavigateToList()
    {
        NavigationManager.NavigateTo("list-block");
    }

    // private async Task TriggerFileInputAsync() => await JS.InvokeVoidAsync("triggerClick", fileInput.Element);

    private async Task ImportFromExcelAsync(InputFileChangeEventArgs e)
    {
        try
        {
            buttonsDisabled = true;
            StateHasChanged(); 
            bool isWeb = factor == "Web";
            isWeb = true;
            string which = factor;

            if (!isWeb)
            {
                // var result = await FilePicker.Default.PickAsync(new PickOptions
                // {
                //         PickerTitle = Localizer.Get("Select an Excel file"),
                // });
                // if (result != null)
                // {
                //     using var stream = await result.OpenReadAsync();

                // }
                return;
            }
            else
            {
                if (e.File == null)
                {
                    NotificationService.ShowError(Localizer.Get("File selection was cancelled or failed."));
                    return;
                }
                if (e.File.Size == 0)
                {
                    NotificationService.ShowError(Localizer.Get("File selection was cancelled or failed."));
                    return;
                }
                blocks = await ExcelService.ImportBlocksAsync(e.File);
                if(blocks.Count() ==0 )
                {
                    NotificationService.ShowError(Localizer.Get("File selection was cancelled or failed."));
                    return;
                }
                ToggleColumns(blocks);
                showBlocks = true;
                buttonsDisabled = false;
            }

        }
        catch (Exception)
        {
            NotificationService.ShowError(Localizer.Get("File selection was cancelled or failed."));
            buttonsDisabled = false;
        }
    }
    private void ToggleColumns(List<BlockDTO> blocks)
    {
        try
        {
            if (blocks == null) return;
            if (blocks.Count() <= 0) return;
            if (blocks.Any(c => !string.IsNullOrEmpty(c.Description))) showDescription = true;
            if (blocks.Any(c => !string.IsNullOrEmpty(c.Material))) showMaterial = true;
        }
        catch (Exception)
        {
            return;
        }
    }
    private async Task ExportToExcelAsync()
    {
        NavigationManager.NavigateTo("block-create");
    }
    private async Task SaveBlocksAsync()
    {
        try
        {
            buttonsDisabled = true;
            StateHasChanged();
            if (blocks == null )
            {
                NotificationService.ShowError(Localizer.Get("No block to save."));
                buttonsDisabled = false;
                return;
            }
            if (blocks.Count() <= 0)
            {
                NotificationService.ShowError(Localizer.Get("No blocks to save."));
                buttonsDisabled = false;
                return;
            }
            var result = await BlockService.ImportBlocksAsync(blocks);
            if (result)
            {
                NotificationService.ShowSuccess(Localizer.Get("Blocks saved successfully"));
                blocks = new List<BlockDTO>();
                showBlocks = false;
            }
            else
            {
                NotificationService.ShowError(Localizer.Get("Failed to save block"));
            }
            buttonsDisabled = false;
        }
        catch (Exception)
        {
            Localizer.Get("Failed to save blocks.");
            buttonsDisabled = false;
        }
    }
}
